<div class="row">
        <div class="col-md-12">
        <%= image_tag @user.avatar.url, class: "img-circle profile-pic" %>
        <span class="pull-right">
            <% if current_user.following.include?(@user.id) %>
                <%= link_to "Following", unfollow_path(id: @user.id), class: "btn btn-primary", id:"unfollow_btn" %>
            <% else %>
                <% if current_user.id != @user.id %>
                <%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
            <% end %>
            <% end %>
        </span>
    </div>
    <div class="col-md-4">
    <!--<%= image_tag @user.avatar.url, class: "img-circle profile-pic" %>-->
        <h3><%= @user.name %></h3>
        <p>@<%= @user.username %></p>
        <p><%= @user.location %></p>
        <p><%= @user.bio %></p>
        <p>Following:<%= @users.count%></p>
        <p>Followed By:<%= @users.count%></p>
    </div>

    <div class="col-md-8">
        <%@user.tweets.each do |tweet| %>
            <div class="panel panel-body">
                <div class="row">
                    <div class="col-xs-2">
                        <%= image_tag @user.avatar.url, class: "img-circle icon" %>
                    </div>
                    <div class="col-xs-10">
                        <p><strong><%= tweet.user.name %></strong> @<span class="text-muted"><%= tweet.user.username %></span></p>
                        <p><%= tweet.message.html_safe %></p>
                        <p><small><%= time_ago_in_words(tweet.created_at) %>ago</p></small></p>
                    </div>
                </div>
            </div>
        <% end %>

    </div>

</div>